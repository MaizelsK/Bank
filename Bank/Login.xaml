<Window x:Class="Bank.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="158*"/>
        </Grid.RowDefinitions>

        <Label Content="Авторизация" HorizontalAlignment="Center" FontSize="20" Margin="0,5,0,0" Width="130"/>
        <StackPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Center" Margin="46,0" Width="150">
            <Label Content="Имя пользователя"/>
            <TextBox Name="LoginText" Width="150"/>

            <Label Content="Пароль"/>
            <TextBox Name="PasswordText" Width="150"/>

            <Button Name="LoginButton" Content="Войти" Width="80" Margin="0,10,0,5"/>
            <Button Name="RegisterButton" Content="Регистрация" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
